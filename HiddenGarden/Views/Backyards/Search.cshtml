@{
  ViewData["Title"] = "Backyards";
}
@using HiddenGarden.Models;
@using System.Collections.Generic;

<div class="container">

  <h3>Search Results For '@ViewBag.SearchResults':</h3>
  @if (Model.Count == 0)
  {
    <p> No backyards match this search </p>
  }
  else
  {
    <ol>
      @foreach (Backyard backyard in Model)
      {
        <li><strong><a href="/Backyards/Details/@(backyard.BackyardId)">@backyard.Service</a></strong> - @backyard.Description</li>
      }
    </ol>
  }
<p>@Html.ActionLink("Return to all backyards", "Index")</p>
</div>